{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["dist", "node_modules", "coverage"],
  "rules": {
    "no-restricted-imports": ["error", { "patterns": ["**/tests/utils/**"] }]
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "**/*.test.tsx"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
