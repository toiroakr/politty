{
  "name": "politty",
  "version": "0.0.1",
  "description": "A lightweight CLI framework inspired by citty with zod v4 registry integration for type-safe metadata management",
  "keywords": [
    "argument-parser",
    "cli",
    "command-line",
    "type-safe",
    "typescript",
    "zod"
  ],
  "license": "MIT",
  "author": "",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./augment": {
      "import": {
        "types": "./dist/augment.d.ts",
        "default": "./dist/augment.js"
      },
      "require": {
        "types": "./dist/augment.d.cts",
        "default": "./dist/augment.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint -c oxlint.json src tests",
    "lint:fix": "oxlint -c oxlint.json --fix src tests",
    "format": "oxfmt src tests",
    "format:check": "oxfmt --check src tests",
    "fix:oxlint": "oxlint -c oxlint.json --fix",
    "fix:oxfmt": "oxfmt",
    "prepare": "lefthook install",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "lefthook": "^2.0.12",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "zod": "^4.2.1"
  },
  "engines": {
    "node": ">=18"
  }
}
